{
	"env": {
		"amd": true,
		"browser": true,
		"es2021": true
	},
	"globals": {
		"define": "readonly",
		"Ext": "readonly",
		"BPMSoft": "readonly",
		"$": "readonly"
	},
	"extends": "eslint:recommended",
	"parserOptions": {
		"ecmaVersion": 12
	},
	"rules": {
		"no-mixed-spaces-and-tabs": "off",
		"complexity": [
			"error",
			15
		],
		"dot-location": [
			"warn",
			"property"
		],
		"no-lonely-if": "error",
		"default-param-last": "error",
		"quotes": [
			"error",
			"double"
		],
		"for-direction": "off",
		"guard-for-in": "error",
		"no-alert": "error",
		"no-floating-decimal": "error",
		"no-magic-numbers": "warn",
		"no-return-assign": "error",
		"no-label-var": "warn",
		"semi": [
			"error",
			"always"
		],
		"eqeqeq": [
			"error",
			"always"
		],
		"block-spacing": "warn",
		"brace-style": "error",
		"func-call-spacing": [
			"error",
			"never"
		],
		"camelcase": "warn",
		"dot-notation": "warn",
		"id-length": "error",
		"no-console": [
			"error",
			{
				"allow": [
					"warn",
					"error"
				]
			}
		],
		"no-empty": "error",
		"key-spacing": [
			"error",
			{
				"mode": "strict"
			}
		],
		"lines-around-comment": [
			"error",
			{
				"beforeLineComment": true,
				"allowClassStart": false
			}
		],
		"newline-per-chained-call": [
			"error",
			{
				"ignoreChainWithDepth": 2
			}
		],
		"keyword-spacing": [
			"error",
			{
				"after": true
			}
		],
		"max-len": [
			"warn",
			{
				"code": 130
			}
		],
		"no-unneeded-ternary": "error",
		"no-whitespace-before-property": "error",
		"nonblock-statement-body-position": [
			"error",
			"below"
		],
		"no-multi-assign": "error",
		"curly": "error",
		"no-new-func": "error",
		"object-curly-spacing": [
			"error",
			"always"
		],
		"one-var": [
			"error",
			"never"
		],
		"arrow-parens": [
			"error",
			"as-needed"
		],
		"arrow-spacing": "error",
		"no-confusing-arrow": "error",
		"no-var": "error",
		"prefer-const": "error",
		"prefer-destructuring": "warn",
		"prefer-template": "error"
	}
}

